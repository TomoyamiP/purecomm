<% if status.present? %>
  <div class="card my-3 border-<%= status[:level] %>">
    <div class="card-body">
      <h5 class="card-title text-<%= status[:level] %>">
        <% case status[:level] %>
          <% when :danger %>
            <%= "⚠️ Critical Attention Needed" %>
          <% when :warning %>
            <%= "⚠️ Needs Attention" %>
          <% when :info %>
            <%= "ℹ️ Heads Up" %>
          <% else %>
            <%= "✅ All Good" %>
        <% end %>
      </h5>

      <p class="card-text">
        <% if @unread_count.positive? %>
          You have <strong><%= status[:unread] %></strong> unread check-ins.<br>
        <% end %>
        In the last <%= status[:days] %> days,
        <strong><%= (status[:ratio] * 100).round %>%</strong> of check-ins
        were marked with tougher moods.
      </p>

      <div class="d-flex">
        <% if @unread_count.positive? %>
          <%= link_to "View unread", partnership_checkins_path(@partnership, filter: :unread), class: "btn btn-outline-primary me-2" %>
        <% end %>
        <%= link_to "Start a conversation", partnership_talks_path(@partnership), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
