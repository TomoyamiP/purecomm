<turbo-stream action="append" target="messages">
  <template>
    <%= render partial: "messages/message",
               formats: [:html],
               locals: { message: @message } %>
  </template>
</turbo-stream>
<turbo-stream action="update" target="new_message">
  <template>
    <%= render partial: "messages/form",
               formats: [:html],
               locals: { partnership: @partnership, message: Message.new } %>
  </template>
</turbo-stream>
