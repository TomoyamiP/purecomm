<h1>Coach Chat</h1>
<section class="chat">
  <!-- Turbo Stream target for appending new messages -->
  <div id="messages">
    <%= render @messages %>
  </div>
  <!-- Form container (so we can replace it on validation errors) -->
  <div id="new_message">
    <%= render partial: "messages/form", locals: { partnership: @partnership, message: @message } %>
  </div>
</section>
