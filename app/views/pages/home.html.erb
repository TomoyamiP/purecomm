<section class="landing-page app-container flow position-relative">
  <!-- Hero -->
  <header class="hero flow">
    <div class="hero-overlay">
      <h1>PureComm</h1>
      <p>
        Stay emotionally in sync, resolve friction gently,
        and communicate in a way that feels natural.
      </p>
      <% if user_signed_in? && current_user.current_partnership %>
        <%= link_to "Get started",
              partnership_path(current_user.current_partnership),
              class: "btn btn-primary hero-cta" %>
      <% elsif user_signed_in? %>
        <%= link_to "Start a partnership",
              new_partnership_path,
              class: "btn btn-primary hero-cta" %>
      <% else %>
        <%= link_to "Get started",
              new_user_session_path,
              class: "btn btn-primary hero-cta" %>
      <% end %>
    </div>
  </header>
  <div class="position-absolute top-0 end-0 mt-3 me-3">
    <%= link_to new_user_session_path, class: "d-flex align-items-center gap-2", title: "Log In" do %>
      <h2 class="m-0">Log In</h2>
      <i class="brand-logo"></i>
    <% end %>
  </div>
  <section class="landing-intro">
    <p>
      PureComm is built to help couples stay emotionally connected every day.
      By combining quick check-ins, thoughtful reflection tools, and an AI-powered coach,
      we give you a private space to share openly, resolve gently, and protect the vibe of your everyday conversations.
    </p>
  </section>
  <!-- Section heading -->
  <section class="landing-banner">
    <div class="landing-banner__overlay">
      <h2>Your Tools for Better Communication</h2>
    </div>
    <!-- Features -->
    <div class="features-grid">
      <!-- Mood Check-In -->
      <section class="card flow feature-card">
        <h2>Mood Check-In</h2>
        <%= inline_svg_tag "icons/checkin-navbar.svg", class: "feature-icon" %>
        <p class="muted">
          A quick daily touchpoint that replaces guesswork with clarity—so your partner knows how to show up for you.
        </p>
      </section>
      <!-- Grievance Drop -->
      <section class="card flow feature-card">
        <h2>Grievance Drop</h2>
        <%= inline_svg_tag "icons/grievance-navbar.svg", class: "feature-icon" %>
        <p class="muted">
          Capture small hurts before they grow. Share calmly and revisit when you’re both ready.
        </p>
      </section>
      <!-- AI Coach -->
      <section class="card flow feature-card">
        <h2>AI Coach</h2>
        <%= inline_svg_tag "icons/keyboard.svg", class: "feature-icon" %>
        <p class="muted">
          Guidance tuned to your love language and temperament—so advice actually lands.
        </p>
      </section>
      <!-- PureComm Space -->
      <section class="card flow feature-card">
        <h2>PureComm Space</h2>
        <%= inline_svg_tag "icons/message-navbar.svg", class: "feature-icon" %>
        <p class="muted">
          Keep relationship talks in their own lane—without disrupting the vibe of everyday chats, plans, or family updates.
        </p>
      </section>
    </div>
    <!-- Secondary CTA -->
    <div class="landing-cta">
      <%= link_to "Create your account", "#", class: "btn btn-primary" %>
    </div>
  </section>
